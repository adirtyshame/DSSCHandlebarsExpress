{{> navigation}}
{{#if error}}
<div class="container">
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <strong>Fehler!</strong> {{error}}
    </div>
</div>
{{/if}}
{{#if info}}
<div class="container">
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        {{info}}
    </div>
</div>
{{/if}}
<div class="container">
	<h2>Meine Daten</h2>
	<form method="POST" action="/api/account" enctype='multipart/form-data'>
		<section style="float:left; margin-right: 20px;">
			<div data-bind="ifnot: imageObjectURL">
				<img id="preview" src="/api/image" alt="Fahrerbild">
			</div>
			<div data-bind="if: imageObjectURL">
				<img class="thumb" data-bind="attr: { src: imageObjectURL }"/>
			</div>
			<input type="file" name="image" accept="image/*;capture=camera" data-bind="file: imageFile, fileObjectURL: imageObjectURL, fileBinaryData: imageBinary" capture="camera"/>
		</section>
		<section style="float:left;" data-bind="with: driver">
			<label for="first">Vorname</label>
			<input name="first" type="text" id="first" class="form-control" data-bind="enable: false, value: driverFirstName">
			<label for="last">Nachname</label>
			<input name="last" type="text" id="last" class="form-control" data-bind="enable: false, value: driverLastName">
			<label for="team">Team</label>
			<input name="team" type="text" id="team" class="form-control" data-bind="enable: false, value: teamName">
			<label for="mail">E-Mail</label>
			<input name="mail" type="text" id="mail" class="form-control" data-bind="enable: false, value: driverMail">
			<hr/>
			<button class="btn btn-default" data-bind="">Aktualisieren</button>
		</section>
	</form>

</div>
<script src="js/account.js" type="text/javascript"></script>