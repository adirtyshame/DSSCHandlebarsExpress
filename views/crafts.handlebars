{{> navigation}}

<div class="container">
	<h2>Fahrzeuge</h2>
	
	<h3>Neues Fahrzeug hinzuf&uuml;gen</h3>
	<table class="table">
		<thead>
			<tr>
				<th>Hersteller</th>
				<th>Modell</th>
				<th>Klasse</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><select class="form-control" data-bind="options: manufacturers, value: selectedManufacturer, optionsText: 'name', optionsValue: 'id'"></select></td>
				<td><select class="form-control" data-bind="options: models, value: selectedModel, optionsText: 'name', optionsValue: 'id'"></select></td>
				<td><select class="form-control" data-bind="options: classes, value: selectedClass, optionsText: 'name', optionsValue: 'id'"></select></td>
				<td><button data-bind="enable: (selectedModel() && selectedClass()), click: addCraft"  class="btn btn-default">hinzuf&uuml;gen</button></td>
			</tr>
		</tbody>
	</table>
	
	<hr/>

	<div data-bind="if: crafts().length < 1">
		keine Fahrzeuge angelegt
	</div>

	<table data-bind="if: crafts().length > 0" class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Hersteller</th><th>Modell</th><th>Klasse</th><th>L&auml;ufe</th><th>&nbsp;</th>
			</tr>
		</thead>
		<tbody data-bind="foreach: crafts">
			<tr>
				<td data-bind="text: $data.manufacturerName"></td>
				<td data-bind="text: $data.scooterName"></td>
				<td data-bind="text: $data.className + ' ('+$data.classShortName+')'"></td>
				<td data-bind="text: $data.runs"></td>
				<td data-bind=""><button class="glyphicon glyphicon-remove" data-bind="click: $parent.removeCraft, visible: $data.runs === 0"></button></td>
			</tr>
		</tbody>
	</table>

</div>
<script src="js/crafts.js" type="text/javascript"></script>